{% extends "base2.njk" %}

{% block body %}
    <body>
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card p-3  py-4">
                    <h5>Search for Flight</h5>
                <div class="mt-3">
              </div>
              <div >
                <div class="card card-body">
                  <form method="POST" action="/user/{{userID}}/search">
                   <div class="row">
                      <div class="col-md-4">
                          <input name="date" type="date" min="" placeholder="Property ID" class="form-control">
                      </div>
                      <div class="col-md-4">
                          <input name="source" type="text" class="form-control" placeholder="Search by Source">
                      </div>
                      <div class="col-md-4">
                          <input name="destination" type="text" class="form-control" placeholder="Search by Destination">
                      </div>
                      <input type="submit" id="searchbtn">
                    </form>
                   </div>
                </div>
              </div>
            </div>
          </div>
        </div>

 


</body>
{% endblock %}