{% extends "base3.njk" %}


{% block body %}
    <body>
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card p-3  py-4">
                    <h5>Search for Flight by Number</h5>
                <div class="mt-3">
              </div>
              <div >
                <div class="card card-body">
                  <form method="POST" action="/user/{{userID}}/searchAdmin">
                   <div class="row">
                      <div class="col-md-4">
                          <input name="flightNumber" type="text" class="form-control" placeholder="Search by flightNumber">
                      </div>
                      <input type="submit" id="searchbtn">
                    </form>
                  </div>
                </div>
                   {%if noFlights%}
                <h4 style="color: red;">No Flights</h4>
                {%endif%}
              </div>
            </div>
          </div>
        </div>

 


</body>
{% endblock %}